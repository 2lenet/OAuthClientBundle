{% extends  "base.html.twig" %}

{% block page_title %}Dashboard{% endblock %}
{% block content_title %} {{ 'title.user.admin_new'|trans }} {%  endblock %}
{% block main %}
    {{ parent() }}
<section>
<div class="row">
        <div class="col-sm-12">
            <div class="global-actions">
                <div style="float:right;">
                    <div class="button-action">
                    <a class="btn btn-primary" style="margin-right:5px;" href="{{path('admin_user_new')}}">
                        <i class="fa fa-download"></i>
                            Nouveau 
                    </a>
                    </div>

                </div>
            </div>
        </div>
</div>
</section>


<section id="main" class="content">
<div class="table-responsive">
<table class="table treetable">
    <tr>
        <th>Username</th>
        <th>Actif</th>
        <th>Nom</th>
        <th>Prenom</th>
        {#<th>Derni√®re connexion</th>#}
        <th>Email</th>
        <th>Roles</th>
        <th>Service</th>
    </tr>

    {% for user in users %}
    <tr>
        <td>{{user.username}}</td>
        <td>{% if user.isActive %}<span class="label label-success">Oui</span>{%  else %}<span class="label label-danger">Non</span>{%  endif %}</td>
        <td>{{user.lastname}}</td>
        <td>{{user.firstname}}</td>
        {#<td>{{ dump(user) }}</td>#}
        <td>{{user.email}}</td>
        <td>{% for role in user.roles %}{{role}}&nbsp;{% endfor %}</td>
        <td>{{user.codeClient|split('/')[1] |service_name}}</td>
    </tr>
    {% endfor %}
</table>
</div>
</section>
{% endblock %}