{% extends  "base.html.twig" %}

{% block page_title %}Dashboard{% endblock %}
{% block content_title %} {{ 'title.user.admin_new'|trans }} {%  endblock %}
{% block main %}
    {{ parent() }}
<section>
<div class="row">
        <div class="col-sm-12">
            <div class="global-actions">
                <div style="float:right;">
                    <div class="button-action">
                    <a class="btn btn-primary" style="margin-right:5px;" href="{{path('admin_user_new')}}">
                        <i class="fa fa-download"></i>
                            Nouveau 
                    </a>
                    </div>

                </div>
            </div>
        </div>
</div>
</section>


<section id="main" class="content">
<div class="table-responsive">
<table class="table treetable">
    <tr>
        <th>username</th>
        <th>actif</th>
        <th>nom</th>
        <th>prenom</th>
        <th>email</th>
        <th>roles</th>
        <th>service</th>
    </tr>

    {% for user in users %}
    <tr>
        <td>{{user.username}}</td>
        <td>{{user.isActive}}</td>
        <td>{{user.lastname}}</td>
        <td>{{user.firstname}}</td>
        <td>{{user.email}}</td>
        <td>{% for role in user.roles %}{{role}}&nbsp;{% endfor %}</td>
        <td>{{user.codeClient|split('/')[1] |service_name}}</td>
    </tr>
    {% endfor %}
</table>
</div>
</section>
{% endblock %}